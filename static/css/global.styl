sans_font = Roboto
serif_font = 'Linux Libertine'
gray = #4A4A4A
orange = #F7921D

border-radius(n)
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n

/*
---------------------
    Common styles
---------------------
*/

html, body
    height: 100%

body
    font: 20px serif_font
    color: gray
    line-height: 29px
    font-weight: 300

h1, h2, h3, h4, h5
    font-family: sans_font
    color: black
    font-weight: 300
    font-size: 40px
    line-height: 120%

h2
    font-size: 36px

h3
    font-size: 30px

h4
    font-size: 24px

h5
    font-size: 18px

a
    color: gray
    text-decoration: underline

    &:hover
        color: gray
        text-decoration: none

form
    input[type="email"], input[type="text"]
        padding: 5px 10px
        width: 260px
        border-radius(3px)
        border: 1px solid #E7E7E7
        margin-right: 15px

.btn, input[type="submit"]
    background: orange
    border: 0
    color: white
    font-family: sans_font
    font-size: 18px
    border-radius(3px)
    padding: 5px 15px
    font-weight: 300
    text-decoration: none

.btn
    padding: 8px 20px

    &:hover
        color: white

.ical.btn
    font-size: 12px
    padding: 1px 5px
    border-radius(3px)

/*
--------------------------
-    Bootstrap new styles
--------------------------
*/

.panel-feature-orange
    border-color:#fbae55

    > .panel-heading
        color:#a15a09
        background-color:#fbc281
        border-color:#fbae55

        + .panel-collapse > .panel-body
            border-top-color:#fbae55

        .badge
            color:#fbc281
            background-color:#a15a09

    > .panel-footer + .panel-collapse > .panel-body
        border-bottom-color:#fbae55

.panel-feature-blue
    border-color:#4ca3ce

    > .panel-heading
        color:#084765
        background-color:#6fafce
        border-color:#4ca3ce

        + .panel-collapse > .panel-body
            border-top-color:#4ca3ce

        .badge
            color:#6fafce
            background-color:#084765

    > .panel-footer + .panel-collapse > .panel-body
        border-bottom-color:#4ca3ce

.btn-blue
  color:#fff
  background-color:#19719c
  border-color:#2b5D75

/*
------------------
    Navigation
------------------
*/

nav
    margin: 30px 0 30px 0

    .logo
        float: left

    ul
        float: right
        list-style-type: none
        margin-bottom: 0
        padding-left: 0

        li
            float: left
            margin-left: 40px
            line-height: 68px

            a
                color: orange
                font-family: sans_font
                text-decoration: none
                text-transform: uppercase
                font-size: 18px

                &:hover
                    color: orange

            &:first-child
                margin-left: 0


/*
------------------------
    Box with picture
------------------------
*/
#box-with-picture
    background: url('../img/global/mainphoto.jpg') 50% 0 no-repeat fixed
    background-position: center -100px
    background-size: cover

    .black-canvas
        background: rgba(0,0,0,0.6)
        width: 100%
        height: 100%

    .container
        padding: 120px 0
        text-align: center

    h1
        font-family: serif_font
        font-size: 48px
        color: white
        line-height: 55px
        font-style: italic
        margin-bottom: 20px

    p
        font-family: serif_font
        font-size: 24px
        color: #E7E7E7
        line-height: 30px
        font-style: italic


/*
------------------------
    About
------------------------
*/
#about
    padding: 30px 0 0 0

    h2
        margin-top: 40px

    h2:first-child
        margin-top: 20px

    .row
        margin-bottom: 20px

    .embed-responsive
        margin-top: 80px

/*
------------------------
    Events
------------------------
*/
#events
    h2
        margin-bottom: 15px

    .event
        margin: 15px 15px 15px 15px
        padding: 0
        background: url('../img/global/krakow.png') no-repeat
        background-size: cover
        width: calc(33% - 30px)
        height: 210px
        text-align: center
        color: white
        font-style: italic

        .overlay
            height: 100%
            width: 100%
            background: rgba(0,0,0,0.5)
            padding: 70px 0 0 0

            &:hover
                background: rgba(0,0,0,0.3)

        p.city
            font-size: 36px
            line-height: 41px
            margin-bottom: 0

        span.date
            font-size: 23px
            line-height: 27px

        p.credit
            font-size: 12px
            text-align: left
            font-family: sans_font
            font-style: normal
            bottom: -5px
            left: 10px
            position: absolute
            opacity: 0

        &:hover
            p.credit
                opacity: 1

    .past-events
        margin-top: 40px

        a
            margin-right: 60px
            margin-bottom: 15px
            float: left

        .col-md-12
            max-height: 200px
            overflow: hidden

        .show-more
            width: 100%
            height: 100px
            position: relative
            float: left
            margin-top: -55px
            padding-top: 63px
            text-align: center
            background: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* FF3.6+ */
            background: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* Opera 11.10+ */
            background: -ms-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* IE10+ */
            background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* W3C */

            a
                float: none
                margin: 0

#map
    height: 580px
    margin-top: 30px

/*
-----------------------------
    Organize & Newsletter
-----------------------------
*/
#organize
    margin-top: 30px

    .row
        margin-top: 10px

    .row:nth-child(2)
        margin-bottom: 30px

    .centered
        text-align: center
        
.newsletter-archive
    margin-top: 20px
    
    ul
        list-style-type: none
        padding: 0
        
        li
            padding: 0 0 15px 0
            font-family: sans_font
            font-size: 14px
            
            a
                text-decoration: none
                color: orange
                font-family: serif_font
                font-size: 20px

/*
-------------
    Story
-------------
*/
#story, #stories
    margin-top: 60px

    .row
        margin: 15px 0

        .girl
            height: 255px
            width: 255px
            padding: 0
            background-size: cover
            background-position: center center
            background-repeat: no-repeat
            margin: 0 15px

            .overlay
                position: absolute
                top: 0
                left: 0
                width: 100%
                height: 100%
                background: rgba(0,0,0,0.5)
                padding-top: 45%
                text-align: center
                color: white
                font-style: italic
                font-size: 30px
                opacity: 0

                &:hover
                    opacity: 1

#stories
    margin-top: 0

    .row
        margin: 30px 0

/*
------------------
    Supporters
------------------
*/
#supporters
    margin-bottom: 30px
    .row
        margin: 30px 0

        .col-md-3
            text-align: center
            line-height: 80px

            img
                max-width: 80%

/*
------------------
    Resources
------------------
*/
#resources

    .row
        margin-bottom: 30px

        .col-md-6
            h3
                margin-bottom: 15px
            .cover
                float: left
                margin-right: 30px

            .info
                .btn
                    margin-right: 15px
                    float: left
                iframe
                    margin-top: 10px

    .row:nth-child(2)
        margin-bottom: 60px

/*
--------------------
    Organize-full
--------------------
*/
#organize-full
    .row
        margin-top: 10px

    iframe #header
        display: none;


/*
--------------
    Footer
--------------
*/
.page-wrap
    min-height: 100%

    &:after
        content: ""
        display: block

footer
    background: #F9F7F7
    padding: 65px 0 40px 0
    margin-top: 90px

    .row
        margin: 0

        .col-md-2,
        .col-md-3
            p
                text-transform: uppercase
                font-family: sans_font
                color: orange
                font-size: 18px
                line-height: 21px

                a
                    text-decoration: none
                    color: orange

            ul
                list-style-type: none
                padding: 0

                li
                    margin-left: 0
                    font-size: 18px
                    line-height: 28px

                    a
                        text-decoration: none

/*
---------------------
    Flatpages
---------------------
*/

#flatpage
    h1


/*
---------------------
    Responsiveness
---------------------
*/
@media (max-width: 1024px)
    nav
        ul
            li
                margin-left: 30px

    #events
        .row
            .event
                width: calc(50% - 30px)
                float: left

    #supporters
        .row
            .col-md-3
                width: calc(50% - 30px)
                float: left

    footer
        padding-top: 50px
        .row
            .col-md-2,
            .col-md-3
                float: left
                width: 50%
                height: 210px
                margin-bottom: 30px


@media (max-width: 725px)
    nav
        ul
            display: none

    #box-with-picture
        height: auto
        background-position: center center

        .container
            padding: 20px

            h1
                font-size: 30px
                line-height: 36px
            p
                font-size: 18px
                line-height: 22px

    #about
        .gallery
            display: none

    #events
        .row
            .event
                width: 90%

    #organize
        form
            input[type="text"], input[type="email"]
                margin-bottom: 15px

    #supporters
        .row
            .col-md-3
                width: 90%

    footer
        padding: 50px 0px 20px 0px
        .row
            .col-md-2,
            .col-md-3
                width: 90%
                height auto
                margin-bottom: 30px