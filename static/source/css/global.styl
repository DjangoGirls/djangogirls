.organize-progress
    margin: 0 auto
    max-width: 1036px
    padding: 40px 0

    .steps
        display: flex
        list-style-type: none
        margin: 0
        padding: 0
        position: relative

    .step
        color: rgba(247, 146, 29, .5)
        flex: 1
        font-family: sans_font
        font-size: 16px
        padding-bottom: 30px
        text-align: center
        text-transform: uppercase

        @media screen and (min-width: 767px)
            position: relative

        &::before,
        &::after
            content: ''
            display: block
            position: relative

        // Line
        &::before
            background-color: rgba(247, 146, 29, .5)
            height: 2px
            left: -50%
            margin: 0 0 -2px
            top: 7.5px
            width: 100%

        &:first-child::before
            display: none

        // Circle
        &::after
            background: white
            border: 2px solid rgba(247, 146, 29, .5)
            border-radius(50%)
            height: 17px
            margin: 0 auto 15px
            top: 0
            width: 17px
            z-index: 2

        .text
            display: block
            left: 0
            position: absolute
            right: 0
            bottom: 0%

        &.active,
        &.complete
            color: orange

            &::before,
            &::after
                background-color: orange
                border-color: orange

        @media screen and (max-width: 766px)
            &:not(.active) .text
                display: none

