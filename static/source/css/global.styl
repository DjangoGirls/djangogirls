sans_font = Roboto
serif_font = 'Lora'
gray = #4A4A4A
orange = #F7921D

border-radius(n)
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n

/*
---------------------
    Common styles
---------------------
*/

html, body
    height: 100%;

body
    font: 18px serif_font
    color: black
    line-height: 29px
    font-weight: 300

h1, h2, h3, h4, h5
    font-family: sans_font
    color: black
    font-weight: 300
    font-size: 40px
    line-height: 180%

h2
    font-size: 36px

h3
    font-size: 30px

h4
    font-size: 24px

h5
    font-size: 18px

a
    color: gray
    text-decoration: underline

    &:hover
        color: gray
        text-decoration: none

form
    input[type="email"], input[type="text"]
        padding: 5px 10px
        width: 260px
        border-radius(3px)
        border: 1px solid #E7E7E7
        margin-right: 15px

.btn, input[type="submit"]
    background: orange
    border: 0
    color: white
    font-family: sans_font
    font-size: 18px
    border-radius(3px)
    padding: 5px 15px
    font-weight: 300
    text-decoration: none

.btn
    padding: 8px 20px
    white-space: normal

    &:hover
        color: white

.ical.btn
    font-size: 12px
    padding: 1px 5px
    border-radius(3px)

/*
--------------------------
-    Bootstrap new styles
--------------------------
*/

.panel-default
    border: 0
    box-shadow: none

    > .panel-heading
        background: none
        border: 0
        padding: 0 0 10px 0

        strong
            font-weight: 400

    .panel-body
        padding: 10px 0


.panel-feature-orange
    border-color:#fbae55

    > .panel-heading
        color:#a15a09
        background-color:#fbc281
        border-color:#fbae55

        + .panel-collapse > .panel-body
            border-top-color:#fbae55

        .badge
            color:#fbc281
            background-color:#a15a09

    > .panel-footer + .panel-collapse > .panel-body
        border-bottom-color:#fbae55

.panel-feature-blue
    border-color:#4ca3ce

    > .panel-heading
        color:#084765
        background-color:#6fafce
        border-color:#4ca3ce

        + .panel-collapse > .panel-body
            border-top-color:#4ca3ce

        .badge
            color:#6fafce
            background-color:#084765

    > .panel-footer + .panel-collapse > .panel-body
        border-bottom-color:#4ca3ce

.btn-blue
  color:#fff
  background-color:#19719c
  border-color:#2b5D75

/*
------------------
    Navigation
------------------
*/

nav
    margin: 20px 0

    .logo
        float: left

    ul
        float: right
        list-style-type: none
        margin-bottom: 0
        padding-left: 0

        li
            float: left
            margin-left: 40px
            line-height: 68px

            a
                color: orange
                font-family: sans_font
                text-decoration: none
                text-transform: uppercase
                font-weight: 500
                font-size: 15px

                &:hover
                    color: orange

            &:first-child
                margin-left: 0


/*
------------------------
    Box with picture
------------------------
*/
#box-with-picture
    background: url('../img/global/mainphoto-04122015.jpg') 50% 0 no-repeat fixed
    background-position: center -100px
    background-size: cover

    .black-canvas
        background: rgba(0,0,0,0.6)
        width: 100%
        height: 100%

    .container
        padding: 120px 0
        text-align: center

    h1
        font-family: serif_font
        font-size: 48px
        color: white
        line-height: 55px
        font-style: italic
        margin-bottom: 20px

    p
        font-family: serif_font
        font-size: 20px
        color: #E7E7E7
        line-height: 30px
        font-style: italic


/*
------------------------
    About
------------------------
*/
#about
    padding: 30px 0 0 0

    h2
        margin-top: 40px

    h2:first-child
        margin-top: 20px

    .row
        margin-bottom: 20px

    iframe
        margin-top: 80px
        width: 100%

    .newsletter
        margin: 18px 0

span.highlighted-number
    background: rgba(255, 127, 0, 0.6)
    padding: 3px 3px 3px 5px
    margin-right: 5px
    color: white

/*
------------------------
    Events
------------------------
*/
#events
    h2
        margin-bottom: 15px

    .event
        margin: 15px 15px 15px 15px
        padding: 0
        background: url('../img/global/krakow.png') no-repeat
        background-size: cover
        width: calc(33% - 30px)
        height: 210px
        text-align: center
        color: white
        font-style: italic

        .overlay
            height: 100%
            width: 100%
            background: rgba(0,0,0,0.5)
            padding: 70px 0 0 0

            &:hover
                background: rgba(0,0,0,0.3)

        p.city
            font-size: 36px
            line-height: 41px
            margin-bottom: 0

        span.date
            font-size: 23px
            line-height: 27px

        p.credit
            font-size: 12px
            text-align: left
            font-family: sans_font
            font-style: normal
            bottom: -5px
            left: 10px
            position: absolute
            opacity: 0

        &:hover
            p.credit
                opacity: 1

    .upcoming-events
        .row-container
            max-height: 450px
            overflow: hidden

        .show-more
            width: 100%
            height: 100px
            position: relative
            float: left
            margin-top: -55px
            padding-top: 63px
            text-align: center
            font-size: 26px
            font-style: italic
            background: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* FF3.6+ */
            background: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* Opera 11.10+ */
            background: -ms-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* IE10+ */
            background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* W3C */

            a
                float: none
                margin: 0

#map
    height: 580px
    margin-top: 30px

/*
-----------------------------
    Organize & Newsletter
-----------------------------
*/
#organize
    margin-top: 30px

    .row
        margin-top: 10px

    .row:nth-child(2)
        margin-bottom: 30px

    .centered
        text-align: center

/* Campaign Monitor Archives */
.newsletter-archive
    margin-top: 15px

    ul
        list-style-type: none
        padding: 0

        li
            padding: 0 0 15px 0
            font-family: sans_font
            font-size: 14px

            a
                text-decoration: none
                color: orange
                font-family: serif_font
                font-size: 20px

/* Mailchimp Archives */
.display_archive
    margin-top: 20px

    a
        text-decoration: none
        color: orange
        font-family: serif_font
        font-size: 20px

.campaign
    font-family: Roboto
    font-size: 14px
    margin-top: 15px
    line-height: 125%

/*
-------------
    Story
-------------
*/
#story, #stories
    margin-top: 60px

    .row
        margin: 15px -15px

        .girl
            height: 255px
            width: 255px
            padding: 0
            margin: 0
            background-size: cover
            background-position: center center
            background-repeat: no-repeat
            margin: 0 15px

            .overlay
                position: absolute
                top: 0
                left: 0
                width: 100%
                height: 100%
                background: rgba(0,0,0,0.5)
                padding-top: 45%
                text-align: center
                color: white
                font-style: italic
                font-size: 30px
                opacity: 0

                &:hover
                    opacity: 1

#stories
    margin-top: 0

    .row
        margin: 30px 0

/*
------------------
    Supporters
------------------
*/
#supporters
    margin-bottom: 30px
    .row
        margin: 30px -15px

        .col-md-3
            text-align: center
            line-height: 80px

            img
                max-width: 80%

/*
------------------
    Resources
------------------
*/
#resources

    .row
        margin-bottom: 30px

        .col-md-6
            h3
                margin-bottom: 15px
            .cover
                float: left
                margin-right: 30px

            .info
                .btn
                    margin-right: 15px
                    float: left
                iframe
                    margin-top: 10px

    .row:nth-child(2)
        margin-bottom: 60px

/*
--------------------
    Organize-full
--------------------
*/
#organize-full
    .row
        margin-top: 10px

    iframe #header
        display: none;


/*
--------------------
    Support us
--------------------
*/
#support
    margin: 60px 0

    .support-stats
        margin: 30px 0 0 0
        font-family: sans_font
        font-size: 24px

        span
            font-weight: 400

    .partnership
        margin-top: 30px
        font-size: 16px

    .support-bar
        width: 90%
        background: #F9F7F7
        height: 50px
        border-radius: 3px
        margin: 30px 0

        .pledge
            background: #00B16A
            height: 50px
            border-radius: 3px
            color: white
            font-family: sans_font
            padding: 10px 0 10px 20px


/*
--------------
    Footer
--------------
*/
.page-wrap
    min-height: 100%
    margin-bottom: -300px

    &:after
        content: ""
        display: block

footer, .page-wrap:after
    height: 300px

footer
    background: #F9F7F7
    padding: 65px 0 0 0
    margin-top: 90px

    .row
        margin: 0

        .col-md-2
            p
                text-transform: uppercase
                font-family: sans_font
                color: orange
                font-size: 18px
                line-height: 21px

                a
                    text-decoration: none
                    color: orange
            ul
                list-style-type: none
                padding: 0

                li
                    margin-left: 0
                    font-size: 16px
                    line-height: 28px
                    color: gray

                    a
                        text-decoration: none


/*
---------------------
    Annual report
---------------------
*/
#annual-report
    margin: 60px 0 0 0
    font-family: serif_font
    font-size: 18px
    line-height: 180%
    color: black
    overflow-x: hidden

    ::selection
        text-shadow: none
        background: orange
        color: #fff
    .report-head
        text-align: center
        img
            width: 100%
            max-width: 500px
    .wrap
        background: #F9F7F7
        padding-top: 30px
        padding-bottom: 75px
        margin: 30px
        .row
            margin: 0
    h1, h2, h3, h4, h5
        font-family: serif_font
        margin: 40px 0 20px 0
    h1
        font-size: 46px
        margin: 20px 0 40px 0
        font-weight: bold
    h2
        text-align: center
    a
        color: orange
    span
        background: rgba(255, 127, 0, 0.6)
        padding: 3px 3px 3px 5px
        margin-right: 5px
        color: white
    p
        margin-bottom: 15px
    .centered
        text-align: center
    table
        width: 100%
        font-size: 16px
        margin-bottom: 40px
        margin-top: 20px
        thead
            background: rgba(255, 127, 0, 0.6)
            color: white
        td
            padding: 2px 15px
            border: 1px solid rgba(255, 127, 0, 0.6)
        tr
            border: 1px solid rgba(255, 127, 0, 0.6)
        tfoot
            background: #F9F7F7
    ul
        li
            margin-bottom: 15px
    .seasons
        padding-top: 30px
        padding-bottom: 30px
        .season
            font-style: serif_font
            font-size: 160px
            line-height: 160px
            padding: 20px 0 0 0
            color: orange
            text-align: center
        ul
            padding-left: 0

    .success-story
        padding-top: 30px
        padding-bottom: 30px
        .col-md-3
            img
                width: 100%
                border-radius: 50%
        .col-md-9
            padding-top: 15px

    hr
        border-color: orange
        border-width: 10px
        width: 10%

    .sponsors
        img
            height: 80px
            margin: 20px 0
        p
            margin-bottom: 30px
    #map
        height: 400px
        margin-top: 30px

    @media screen and (min-width: 766px)
        blockquote
            border: 0
            padding: 0
            font-style: italic
        blockquote:before
            content: "â€œ"
            display: block
            color: orange
            font-size: 112px
            line-height: .2
            font-weight: 800
            margin-top: 60px
            font-style: normal
            font-family: serif_font

/*
---------------------
    Text Pages
---------------------
*/
#textonly-pages
    font-size: 18px
    line-height: 180%
    color: black
    overflow-x: hidden

    h1
        font-size: 32px
        margin: 20px 0 40px 0
        font-weight: bold
        text-align: center
    a
        color: orange
    p
        margin-bottom: 15px
    .important
        text-align: center
        font-weight: bold
        font-size: 22px
    ul
        li
        margin-bottom: 15px

/*
---------------------
    Responsiveness
---------------------
*/
@media (max-width: 1024px)
    nav
        ul
            li
                margin-left: 30px

    #events
        .row
            .event
                width: calc(50% - 30px)
                float: left

    #supporters
        .row
            .col-md-3
                width: calc(50% - 30px)
                float: left

    footer
        padding-top: 50px
        .row
            .col-md-3
                float: left
                width: calc(50% - 30px)
                margin-bottom: 30px

    footer, .page-wrap:after
        height: 480px

    .page-wrap
        margin-bottom: -480px


@media (max-width: 725px)
    nav
        ul
            display: none

    #box-with-picture
        height: auto
        background-position: center center

        .container
            padding: 20px

            h1
                font-size: 30px
                line-height: 36px
            p
                font-size: 18px
                line-height: 22px


    #about
        .gallery
            display: none

    #events
        .row
            .event
                width: 90%

    #organize
        form
            input[type="text"], input[type="email"]
                margin-bottom: 15px

    #supporters
        .row
            .col-md-3
                width: 90%

    footer
        padding-top: 50px
        .row
            .col-md-3
                width: 90%
                margin-bottom: 30px

    footer, .page-wrap:after
        height: 900px

    .page-wrap
        margin-bottom: -900px


.post-content
    font-size: 16px
    margin-bottom: 25px



@import "common"
